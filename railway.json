{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python -m gunicorn --bind 0.0.0.0:$PORT --timeout 30 --workers 2 --threads 4 --worker-class gthread --worker-connections 1000 --max-requests 1000 --preload wsgi:application",
    "healthcheckPath": "/test",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
