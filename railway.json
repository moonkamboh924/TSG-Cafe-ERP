{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python -m gunicorn --bind 0.0.0.0:$PORT --timeout 600 --workers 1 --threads 2 --worker-class gthread --keep-alive 2 wsgi:application",
    "healthcheckPath": "/test",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
