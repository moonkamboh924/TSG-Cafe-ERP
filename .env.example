# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/dbname

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@tsgcafe.com

# SMS Configuration - Choose ONE provider
# For Pakistan: Use Twilio (free trial) or MSG91 (paid but reliable)
SMS_PROVIDER=TWILIO

# Twilio SMS Configuration (FREE trial credit - RECOMMENDED for Pakistan)
# Sign up at https://www.twilio.com/try-twilio (get $15 free credit)
# Works in Pakistan and internationally
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# MSG91 SMS Configuration (Paid - requires credits, works in Pakistan)
# Sign up at https://msg91.com/
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=TSGCAF
MSG91_ROUTE=4
MSG91_TEMPLATE_ID=your-template-id

# Fast2SMS Configuration (India only)
FAST2SMS_API_KEY=your-fast2sms-api-key

# TextLocal Configuration (Decommissioned as of Nov 30, 2025)
TEXTLOCAL_API_KEY=your-textlocal-api-key
TEXTLOCAL_SENDER=TSGCAF

# Cache Configuration
CACHE_TYPE=SimpleCache
# For production, use Redis:
# CACHE_TYPE=RedisCache
# REDIS_URL=redis://localhost:6379/0

# Application Settings
ERP_NAME=TSG Cafe ERP
TIMEZONE=Asia/Karachi
CURRENCY=PKR
