# ============================================================================
# TSG CAFE ERP - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development
DEBUG=True

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# For local development (SQLite)
# DATABASE_URL is automatically set to SQLite if not provided

# For production (PostgreSQL on Railway/Heroku)
# DATABASE_URL=postgresql://username:password@host:port/database

# ============================================================================
# ERP SETTINGS
# ============================================================================
ERP_NAME=TSG Cafe ERP
ERP_SUBTITLE=Powered by Trisyns Global
TIMEZONE=Asia/Karachi
CURRENCY=PKR
LANG=en

# ============================================================================
# EMAIL CONFIGURATION (Flask-Mail)
# ============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@tsgcafe.com

# ============================================================================
# SMS CONFIGURATION
# ============================================================================
SMS_PROVIDER=TWILIO

# Twilio (Recommended - Works globally including Pakistan)
# Sign up at: https://www.twilio.com/try-twilio
# Get $15 free credit
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# MSG91 (Alternative - Paid service for Pakistan)
# Sign up at: https://msg91.com
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=TSGCAF
MSG91_ROUTE=4
MSG91_TEMPLATE_ID=your_template_id

# Fast2SMS (India only - Free 50 SMS/day)
# Sign up at: https://www.fast2sms.com
FAST2SMS_API_KEY=your_fast2sms_api_key

# ============================================================================
# STRIPE PAYMENT CONFIGURATION
# ============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use TEST keys for development (start with pk_test_ and sk_test_)
# Use LIVE keys for production (start with pk_live_ and sk_live_)

# Publishable Key (Frontend - safe to expose)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Secret Key (Backend - KEEP SECRET!)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Webhook Secret (Get from: https://dashboard.stripe.com/webhooks)
# Used to verify webhook signatures
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300

# For production with Redis
# CACHE_TYPE=RedisCache
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# LOGGING
# ============================================================================
LOG_TO_STDOUT=false

# ============================================================================
# DEMO MODE (Optional)
# ============================================================================
# Set to true to create a demo tenant on first run
DEMO_MODE=false
