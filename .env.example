# TSG Cafe ERP - Environment Variables Template
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=production
DEBUG=False

# Database Configuration (Railway will provide DATABASE_URL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Application Settings
ERP_NAME=TSG Cafe ERP
ERP_SUBTITLE=Powered by Trisync Global
TIMEZONE=Asia/Karachi
CURRENCY=PKR
TAX_RATE=16

# Security Settings
FALLBACK_VERIFICATION_CODE=your-verification-code
FALLBACK_ADMIN_PASSWORD=your-admin-password

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Backup Settings
BACKUP_FREQUENCY=daily
AUTO_BACKUP_ENABLED=True

# Railway Specific
PORT=5000
